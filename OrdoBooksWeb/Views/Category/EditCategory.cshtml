@model BookCategory
<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class=" row">
            <input asp-for="CategoryId" hidden />
            <div class="border p-3 ">
                <div class="row pb-2">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Name"></label>
                        
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="DisplayOrder"></label>
                      
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="text-center ">
                        <button class="btn btn-primary form-control" type="submit" style="width:150px">
                            Update
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                    </div>
                    <a></a>

                </div>
            </div>























        </form>
    </div>
</div>


<script type="text/javascript">

    @{
            <partial   name="_ValidationScriptsPartial" />
    }





</script>
