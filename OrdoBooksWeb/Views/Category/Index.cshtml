@model List<BookCategory>

<div class="container">

<div class="row pt-4 pb-3">
    <div class="col-6">
            <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="CreateNewCategory">
                <i class="bi bi-patch-plus-fill"></i>  Add new Category
        </a>
        
    </div>


</div>

<table class="table table-bordered table-striped" style="border:2px;color:aliceblue">
    <thead class="border border-primary">
    <tr>
     <th>Category Name</th>
     <th>Dispaly Order</th>
     <th>Actions</th>
</tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
        <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                  <a asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" >
                                <i class="bi bi-pencil"></i>
                  </a>
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" >
                                <i class="bi bi-trash"></i>
                            </a>


                </div>
            </td>


            </tr>
        }
    </tbody>
</table>
</div>