@model BookCategory

<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 ">
                <div class="row pb-2">
                  
                        <input asp-for="CategoryId" hidden />
                  
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" disabled />
                        <label class="mb-2" asp-for="Name"></label>
                        

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" readonly />
                        <label class="mb-2" asp-for="DisplayOrder"></label>
                       

                    </div>
                    <div class="text-center ">
                        <button class="btn btn-danger" type="submit" style="width:150px">
                            Delete
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                    </div>
                    <a></a>

                </div>
            </div>
</form>
    </div>
</div>



