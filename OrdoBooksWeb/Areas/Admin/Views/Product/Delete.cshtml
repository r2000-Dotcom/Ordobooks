@model Product

<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3 ">
                <div class="row pb-2">
                  
                        <input asp-for="Id" hidden />

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" type="text" class="form-control border-0 shadow" readonly/>
                        <label class="ms-2" asp-for="Title"></label>


                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="ISBN" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="ISBN"></label>


                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="Description" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="Description"></label>


                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="Author" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="Author"></label>


                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="ListPrice"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="Price"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price50" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="Price50"></label>

                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price100" type="text" class="form-control border-0 shadow" readonly />
                        <label class="ms-2" asp-for="Price100"></label>

                    </div>
                        <div class="text-center ">
                        <button class="btn btn-danger" type="submit" style="width:150px">
                            Delete
                        </button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                    </div>
                    <a></a>

                </div>
            </div>
</form>
    </div>
</div>



