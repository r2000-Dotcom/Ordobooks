@model ProductViewModel
<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model?.Product?.Id > 0 ? "Edit Product" : "Add Product")</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class=" row" enctype="multipart/form-data">
            <div class="row">
                <div class="col-10">

                    <input asp-for="Product.Id" hidden />
                    <div class="border p-3 ">
                        <div class="row pb-2">
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Title" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.Title"></label>
                                <span asp-validation-for="Product.Title" class="text-danger"></span>

                            </div><div class="form-floating py-2 col-12">
                                <input asp-for="Product.ISBN" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.ISBN"></label>
                                <span asp-validation-for="Product.ISBN" class="text-danger"></span>


                            </div><div class="form-floating py-2 col-12">
                                <label asp-for="Product.Description" class="ms-2 text-muted"></label>
                                <textarea asp-for="Product.Description" class="form-control border-0 shadow" name="ShortDescriptionEditor" Style="display:none"></textarea>
                            </div><div class="form-floating py-2 col-12">
                                <input asp-for="Product.Author" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.Author"></label>
                                <span asp-validation-for="Product.Author" class="text-danger"></span>

                            </div>
                            <div class="form-floating py-2 col-12">
                                <select asp-for="Product.CategoryId" type="text" class="form-select border-0 shadow">
                                    @foreach (var item in Model.CategoryList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>

                                <label class="ms-2" asp-for="Product.CategoryId"></label>
                                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                            </div>


                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.ListPrice" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.ListPrice"></label>
                                <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Price" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.Price"></label>
                                <span asp-validation-for="Product.Price" class="text-danger"></span>

                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Price50" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.Price50"></label>
                                <span asp-validation-for="Product.Price50" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input asp-for="Product.Price100" type="text" class="form-control border-0 shadow" />
                                <label class="ms-2" asp-for="Product.Price100"></label>
                                <span asp-validation-for="Product.Price100" class="text-danger"></span>
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input type="file" name="files" class="form-control border-0 shadow" />
                                <label>Product Image</label>


                            </div>
                            <div class="text-center ">
                                <button class="btn btn-primary form-control" type="submit" style="width:150px">
                                    @(Model?.Product?.Id > 0 ? "Update" : "Add")
                                </button>
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                            </div>
                            <a></a>

                        </div>
                    </div>

                </div>
                <div class="col-2">

                    <div class="border p-1 m-2 text-center">
                        <img src="@Model?.Product?.ImageUrl" width="100%"
                             style="border-radius:5px; border:1px solid #bbb9b9" />

                    </div>

                </div>



            </div>



























        </form>
    </div>
</div>
<script src="~/shared/libs/form-advanced/form-advanced.init.js"></script>

<script type="text/javascript">

    var ShortDescriptionEditor = new Quill("#snow", { theme: "snow", modules: { toolbar: [[{ font: [] }, { size: [] }], ["bold", "italic", "underline", "strike"], [{ color: [] }, { background: [] }], [{ script: "super" }, { script: "sub" }], [{ header: [!1, 1, 2, 3, 4, 5, 6] }, "blockquote", "code-block"], [{ list: "ordered" }, { list: "bullet" }, { indent: "-1" }, { indent: "+1" }], ["direction", { align: [] }], ["link", "image", "video"], ["clean"]] } }); $(".select2").select2({ width: "100%" })
</script>

       
   



