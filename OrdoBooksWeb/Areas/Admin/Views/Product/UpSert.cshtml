@model ProductViewModel
<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Product</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class=" row">
            <input asp-for="Id" hidden />
            <div class="border p-3 ">
                <div class="row pb-2">
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Product.Title" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Title"></label>
                        
                        
                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="ISBN"></label>


                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="Description" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Description"></label>
                        
                        
                    </div><div class="form-floating py-2 col-12">
                        <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Author"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="CategoryId" type="text" asp-items="ViewBag.categotylist" class="form-select border-0 shadow">
                        </select>
                        <label class="ms-2" asp-for="CategoryId"></label>
                    </div>
                    
                    
                    <div class="form-floating py-2 col-12">
                        <input asp-for="ListPrice" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="ListPrice"></label>


                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Price"></label>
                        
                        
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price50" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Price50"></label>
                      
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Price100" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Price100"></label>

                    </div>
                    <div class="text-center ">
                        <button class="btn btn-primary form-control" type="submit" style="width:150px">
                            Update
                        </button>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                    </div>
                    <a></a>

                </div>
            </div>























        </form>
    </div>
</div>


<script type="text/javascript">

    @{
            <partial   name="_ValidationScriptsPartial" />
    }





</script>
