@model List<Product>

<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
               
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Product" asp-action="UpSert">
                    <i class="bi bi-patch-plus-fill"></i>  Add new Product
                </a>

            </div>


        </div>

        <table class="table table-bordered table-striped" style="border:2px;color:aliceblue">
            <thead class="border border-primary">
                <tr>
                    <th>Title</th>
                    <th>Isbn</th>
                    <th>Author</th>
                    <th>Last Price</th>
                    <th>Price</th>
                    <th>Price50</th>
                    <th>Price100</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.ISBN</td>
                        <td>@item.Author</td>
                        <td>@item.ListPrice</td>
                        <td>@item.Price</td>
                        <td>@item.Price50</td>
                        <td>@item.Price100</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-id="@item.Id" asp-action="UpSert" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i>
                                </a>


                            </div>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
