@model List<Company>


<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>

    </div>
    <div class=" container card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Company" asp-action="UpSert">
                    <i class="bi bi-patch-plus-fill"></i>  Add new Company
                </a>

            </div>
        </div>

        <table id="Companytable"
               
        </table>
    </div>
</div>
<script type="text/javascript">

    $('#Companytable').show();
    $('#Companytable').bootstrapTable({
        method: 'get',
        url: '/Admin/Company/CompanyListataData',
        ajaxOption: { traditional: true },
        queryParams: function (p) {
            return {

                Limit: p.limit,
                Search: p.search,
                Offset: p.offset,
                Order: p.order,
            };
        },
        cache: true,
        striped: true,
        pagination: true,
        search: true,
        pageSize: 10,
        pageList: [10, 20, 50],
        hideLoading: false,
        showLoading: true,

        columns: [
            { field: 'name', title: 'Name' },
            { field: 'streetAddress', title: 'Address' },
            { field: 'city', title: 'City' },
            { field: 'state', title: 'State' },
            { field: 'phoneNumber', title: 'PhoneNumber' },
            {
                field: 'bIRTReportURL', title: 'Action', formatter: (value, row, index, field) => {

                    return `<div class="w-75 btn-group" role="group">
                                 <a href="/Admin/Company/upsert?id=${row.id}" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                                 <a onClick=Delete('/Admin/Company/Delete/${row.id}') class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                            </div>`
                }
            }
        ]
    });


    function Delete(url) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: url,
                    type: 'DELETE',
                    success: function (data) {
                        $('#Companytable').refresh();
                        
                    }
                })
            }
        })
    }
</script>


