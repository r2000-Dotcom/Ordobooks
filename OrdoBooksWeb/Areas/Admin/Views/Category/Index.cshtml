@model List<BookCategory>

<div class="card show border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
               
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="CreateNewCategory">
                    <i class="bi bi-patch-plus-fill"></i>  Add new Category
                </a>

            </div>


        </div>

        <table class="table table-bordered table-striped" style="border:2px;color:aliceblue">
            <thead class="border border-primary">
                <tr>
                    <th>Category Name</th>
                    <th>Dispaly Order</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-id="@item.CategoryId" asp-action="EditCategory" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-controller="Category" asp-route-id="@item.CategoryId" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i>
                                </a>


                            </div>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
