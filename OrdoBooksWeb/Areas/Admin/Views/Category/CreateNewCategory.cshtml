@model BookCategory

<div class="card show border-0 ">
    <div class="card-header bg-secondary bg-gradient ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Category</h2>
            </div>
        </div>
        
    </div>

    <div class="card-body ">
      
 <form method="post" class="row">
            <div class="border p-3 ">
                <div class="row pb-2">
               <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Name"></label>
                       
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" type="text" class="form-control border-0 shadow" />
                        <label class="ms-2" asp-for="DisplayOrder"></label>
                      
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="text-center p-2 ">
                        <button class="btn btn-primary form-control " type="submit" style="width:150px">
                            Create
                        </button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control m-lg-1" style="width:150px"> Back to List</a>
                    </div>
                    <a></a>

                </div>
            </div>
</form>
        
    </div>
</div>

<script type="text/javascript">
    @{
            <partial   name="_ValidationScriptsPartial" />
}
</script>
